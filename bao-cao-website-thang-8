    <script>
        Chart.register(ChartDataLabels);

        const COLORS = {
            deepBlue: '#003f5c',
            purple: '#58508d',
            magenta: '#bc5090',
            coral: '#ff6361',
            orange: '#ffa600',
            lightGray: '#e0e0e0'
        };

        function wrapLabel(label, maxWidth) {
            if (label.length <= maxWidth) {
                return label;
            }
            const words = label.split(' ');
            let line = '';
            const lines = [];
            for (let i = 0; i < words.length; i++) {
                const testLine = line + words[i] + ' ';
                if (testLine.length > maxWidth && i > 0) {
                    lines.push(line.trim());
                    line = words[i] + ' ';
                } else {
                    line = testLine;
                }
            }
            lines.push(line.trim());
            return lines;
        }

        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            if (Array.isArray(label)) {
                return label.join(' ');
            }
            return label;
        };
        
        const commonTooltipOptions = {
            plugins: {
                tooltip: {
                    callbacks: {
                        title: tooltipTitleCallback
                    }
                },
                datalabels: {
                    display: false
                }
            }
        };

        document.addEventListener('DOMContentLoaded', () => {
            
            new Chart(document.getElementById('julySourceChart').getContext('2d'), {
                type: 'doughnut',
                data: {
                    labels: ['Từ khóa Thương hiệu', 'Từ khóa Sản phẩm/Khác'],
                    datasets: [{
                        data: [31, 24], // Dữ liệu tháng 7
                        backgroundColor: [COLORS.purple, COLORS.lightGray],
                        borderColor: '#ffffff',
                        borderWidth: 4
                    }]
                },
                options: { ...commonTooltipOptions, responsive: true, maintainAspectRatio: false, plugins: { ...commonTooltipOptions.plugins, legend: { position: 'bottom' } } }
            });

            new Chart(document.getElementById('augustSourceChart').getContext('2d'), {
                type: 'doughnut',
                data: {
                    labels: ['Từ khóa Sản phẩm/Khác', 'Từ khóa Thương hiệu'],
                    datasets: [{
                        data: [205, 25], // Dữ liệu tháng 8
                        backgroundColor: [COLORS.coral, COLORS.purple],
                        borderColor: '#ffffff',
                        borderWidth: 4
                    }]
                },
                options: { ...commonTooltipOptions, responsive: true, maintainAspectRatio: false, plugins: { ...commonTooltipOptions.plugins, legend: { position: 'bottom' } } }
            });

            new Chart(document.getElementById('topPagesChart').getContext('2d'), {
                type: 'bar',
                data: {
                    labels: [
                        wrapLabel('Trang chủ', 16),
                        wrapLabel('Nhôm 7075-T6...', 16),
                        wrapLabel('Tiêu chuẩn ASTM B209...', 16),
                        wrapLabel('Cắt lẻ tấm nhôm...', 16),
                        wrapLabel('Hưng Yên khởi công...', 16)
                    ],
                    datasets: [{
                        label: 'Lượt nhấp',
                        data: [69, 9, 7, 6, 6],
                        backgroundColor: [COLORS.deepBlue, COLORS.purple, COLORS.magenta, COLORS.coral, COLORS.orange],
                        borderRadius: 4
                    }]
                },
                options: {
                    ...commonTooltipOptions,
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { ...commonTooltipOptions.plugins, legend: { display: false } },
                    scales: { x: { beginAtZero: true } }
                }
            });

            new Chart(document.getElementById('topNonBrandKeywordsChart').getContext('2d'), {
                type: 'bar',
                data: {
                    labels: [
                        wrapLabel('astm b209', 16),
                        wrapLabel('fabtech 2025', 16),
                        'nhôm a1050',
                        wrapLabel('nhôm 7075 cứng hơn thép', 16),
                        'nhôm tròn đặc'
                    ],
                    datasets: [{
                        label: 'Lượt nhấp',
                        data: [2, 2, 1, 1, 1],
                        backgroundColor: [COLORS.coral, COLORS.orange, COLORS.magenta, COLORS.purple, COLORS.deepBlue],
                        borderRadius: 4
                    }]
                },
                options: {
                    ...commonTooltipOptions,
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { ...commonTooltipOptions.plugins, legend: { display: false } },
                    scales: { x: { beginAtZero: true, max: 3 } }
                }
            });
            
            new Chart(document.getElementById('trafficSourceChart').getContext('2d'), {
                type: 'bar',
                data: {
                    labels: ['Google Organic', 'Truy cập trực tiếp', 'Bing/Yahoo', 'Facebook', 'Khác'],
                    datasets: [{
                        label: 'Số người dùng',
                        data: [338, 51, 16, 11, 18],
                        backgroundColor: [
                            COLORS.deepBlue, 
                            COLORS.purple, 
                            COLORS.magenta, 
                            COLORS.coral, 
                            COLORS.orange
                        ],
                        borderRadius: 4,
                        borderWidth: 0
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            callbacks: {
                                title: (tooltipItems) => tooltipItems[0].label
                            }
                        },
                        datalabels: {
                            anchor: 'end',
                            align: 'end',
                            formatter: (value) => value,
                            color: '#333',
                            font: {
                                weight: 'bold'
                            }
                        }
                    },
                    scales: {
                        x: {
                            beginAtZero: true,
                            grid: {
                                display: false
                            },
                            ticks: {
                                display: false
                            }
                        },
                        y: {
                             grid: {
                                display: false
                            }
                        }
                    }
                }
            });

            new Chart(document.getElementById('userTypeChart').getContext('2d'), {
                type: 'doughnut',
                data: {
                    labels: ['Phiên từ người dùng mới', 'Phiên từ người dùng quay lại'],
                    datasets: [{
                        data: [419, 150],
                        backgroundColor: [COLORS.purple, COLORS.magenta],
                        borderColor: '#ffffff',
                        borderWidth: 4
                    }]
                },
                options: { ...commonTooltipOptions, responsive: true, maintainAspectRatio: false, plugins: { ...commonTooltipOptions.plugins, legend: { position: 'bottom' } } }
            });

            const dailyClicks = [4,5,7,9,11,5,14,7,2,4,11,12,12,7,11,10,13,8,9,12,11,11,6,9,11,8,13,11,10,7,4];
            const dailyImpressions = [358,310,403,437,442,394,442,421,488,307,417,407,381,353,401,365,404,364,302,298,269,252,231,223,235,174,182,189,170,165,145];

            new Chart(document.getElementById('dailyTrendChart').getContext('2d'), {
                type: 'line',
                data: {
                    labels: Array.from({length: 31}, (_, i) => `${i + 1}/8`),
                    datasets: [{
                        label: 'Lượt nhấp',
                        data: dailyClicks,
                        borderColor: COLORS.coral,
                        backgroundColor: 'rgba(255, 99, 97, 0.2)',
                        fill: true,
                        tension: 0.3,
                        yAxisID: 'y',
                    }, {
                        label: 'Lượt hiển thị',
                        data: dailyImpressions,
                        borderColor: COLORS.deepBlue,
                        backgroundColor: 'rgba(0, 63, 92, 0.2)',
                        fill: false,
                        tension: 0.3,
                        yAxisID: 'y1',
                    }]
                },
                options: {
                    ...commonTooltipOptions,
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: { position: 'left', title: { display: true, text: 'Lượt nhấp' } },
                        y1: { position: 'right', title: { display: true, text: 'Lượt hiển thị' }, grid: { drawOnChartArea: false } }
                    },
                    plugins: { ...commonTooltipOptions.plugins, legend: { position: 'bottom' } }
                }
            });

            const mapData = [{
                type: 'choropleth',
                locations: ['VNM', 'CHN', 'HKG', 'USA', 'IND', 'THA', 'DEU', 'ZAF', 'JPN', 'IDN', 'CHE', 'CZE', 'PER'],
                z: [210, 4, 3, 2, 2, 2, 1, 1, 1, 1, 1, 1, 1],
                text: ['Việt Nam', 'Trung Quốc', 'Hong Kong', 'Hoa Kỳ', 'Ấn Độ', 'Thái Lan', 'Đức', 'Nam Phi', 'Nhật Bản', 'Indonesia', 'Thụy Sĩ', 'Czechia', 'Peru'],
                colorscale: [
                    [0, '#eef5f9'],
                    [1, '#003f5c']
                ],
                autocolorscale: false,
                reversescale: false,
                marker: {
                    line: {
                        color: 'rgb(180,180,180)',
                        width: 0.5
                    }
                },
                tick0: 0,
                zmin: 0,
                dtick: 1000,
                colorbar: {
                    autotic: false,
                    tickprefix: '',
                    title: 'Lượt nhấp'
                }
            }];

            const mapLayout = {
                title: '',
                geo: {
                    showframe: false,
                    showcoastlines: true,
                    projection: {
                        type: 'mercator'
                    }
                },
                margin: { l: 0, r: 0, t: 0, b: 0 }
            };

            Plotly.newPlot('map', mapData, mapLayout, {showLink: false, displayModeBar: false});

        });
    </script>
